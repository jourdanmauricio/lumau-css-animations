---
interface Props {
  box: {
    id: number;
    title: string;
    description: string;
    linkTo: string;
  };
}

const { box } = Astro.props;
---

<div
  class="flex flex-col gap-4 p-4 border border-solid border-gray-600 rounded max-w-[300px] min-h-[280px] shadow-lg shadow-gray-700/50"
>
  <div>
    <p class="text-center mb-2">{box.title}</p>
    <hr />
  </div>

  <p class="py-4 flex-grow">{box.description}</p>

  <div class="flex justify-evenly pt-4">
    <a
      href={`/lumau-css-animations/imagenes/${box.linkTo}`}
      class="p-2 hover:bg-gray-800 rounded-sm border"
    >
      Ver detalle
    </a>
  </div>
</div>
