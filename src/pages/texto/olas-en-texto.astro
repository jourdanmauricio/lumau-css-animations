---
import Layout from '../../layout/Layout.astro';
const html = `
  <section>
    <h2 class="border">wavy</h2>
    <h2 class="wave">wavy</h2>
  </section>
`;
const styles = `
    section {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background-color: black;
    display: flex;
    width: 100%;
    min-height: 150px;
    justify-content: center;
    align-items: center;
  }
  h2 {
    position: absolute;
    font-size: 5rem;
    color: black;
  }
  .border {
    border-color: black;
    text-shadow:
      -1px -1px 0 white,
      1px -1px 0 white,
      1px 1px 0 white,
      -1px 1px 0 white;
  }
  .wave {
    color: #09f;
    animation: wave 3s ease-in-out infinite;
  }
  @keyframes wave {
    0%,
    100% {
      clip-path: polygon(
        0% 47%,
        10% 48%,
        33% 54%,
        54% 60%,
        70% 61%,
        84% 59%,
        100% 52%,
        100% 100%,
        0% 100%
      );
    }
    50% {
      clip-path: polygon(
        0% 60%,
        15% 65%,
        34% 66%,
        51% 62%,
        67% 50%,
        84% 45%,
        100% 46%,
        100% 100%,
        0% 100%
      );
    }
  }
`;
