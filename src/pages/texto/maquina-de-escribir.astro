    align-items: center;
  }
  /* steps(27) y width: 27ch -> son la cantidad de caracteres */
  span {
    color: #000;
    font-family: monospace;
    font-size: 1.5rem;
    white-space: nowrap;
    border-right: 2px solid;
    width: 28ch;
    overflow: hidden;
    animation:
      typing 2s steps(28),
      blink 0.5s infinite step-end alternate;
  }

  @keyframes typing {
    from {
