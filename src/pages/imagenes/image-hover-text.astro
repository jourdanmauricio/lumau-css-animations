---
import Layout from '../../layout/Layout.astro';

const html = `
  <section>
    <a href="#">
      <figure>
        <img
          src="/lumau-css-animations/images/imagen1.jpg"
          alt="Imagen 1"
        />
        <div class="capa">
          <h3>SLee Dw</h3>
          <p>
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Maiores,
            vero!
          </p>
        </div>
      </figure>
    </a>
  </section>
`;
const styles = `
  section {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 60px auto;
  }
  section figure {
    position: relative;
    height: 250px;
    cursor: pointer;
    width: 350px;
    overflow: hidden;
    border-radius: 6px;
    box-shadow: 0px 15px 25px rgba(0, 0, 0, 0.5);
  }
  section figure img {
    width: 100%;
    height: 100%;
    transition: all 400ms ease-out;
    will-change: transform;
  }
  section figure .capa {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 103, 123, 0.7);
    transition: all 400ms ease-out;
    opacity: 0;
    visibility: hidden;
    text-align: center;
  }
  section figure:hover > .capa {
    opacity: 1;
    visibility: visible;
  }
  section figure:hover > .capa h3 {
    margin-top: 70px;
    margin-bottom: 15px;
  }
  section figure:hover > img {
    transform: scale(1.3);
  }
  section figure .capa h3 {
    color: #fff;
    font-weight: 400;
    margin-bottom: 120px;
    transition: all 400ms ease-out;
    margin-top: 30px;
  }
  section figure .capa p {
    color: #fff;
    font-size: 15px;
    line-height: 1.5;
    width: 100%;
    max-width: 220px;
    margin: auto;
  }
`;
