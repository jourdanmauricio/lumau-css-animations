---
import Layout from '../../layout/Layout.astro';

const html = `
    <img
      src="/lumau-css-animations/images/imagen6.jpg"
      alt="Imagen aleatoria 1"
    />
`;
const styles = `
  img {
    padding: 40px 0;
    margin: 0 auto;
    animation: fadeIn 3s ease;
  }
  @keyframes fadeIn {
    0% {
      opacity: 0;
      filter: blur(20px);
    }
    10% {
      opacity: 1;
      filter: brightness(2) blur(10px);
    }
  }
`;
---

<Layout
  pageTitle="Asesoría financiera"
  description="Black Wing optimiza tus Finanzas con Profesionales. Nuestros asesores financieros están aquí para ayudarlo. Ingresa y comunícate con nuestro equipo"
>
  <main>
    <img
      src="/lumau-css-animations/images/imagen6.jpg"
      alt="Imagen aleatoria 1"
    />

    <div class="w-2/3 mt-8 mx-auto">
      <pre><code class="language-html">{html}</code> </pre>
    </div>
    <div class="w-2/3 mt-4 mb-8 mx-auto">
      <pre><code class="language-css">{styles}</code></pre>
    </div>
  </main>
</Layout>

<style>
  img {
    padding: 40px 0;
    margin: 0 auto;
    animation: fadeIn 3s ease;
  }
  @keyframes fadeIn {
    0% {
      opacity: 0;
      filter: blur(20px);
    }
    10% {
      opacity: 1;
      filter: brightness(2) blur(10px);
    }
  }
</style>
