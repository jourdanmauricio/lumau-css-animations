import Layout from '../../layout/Layout.astro';
import Card from '../../components/Card/Card.astro';

const boxes = [
  {
    id: 1,
    title: 'Hero básico',
    description: 'Sección hero con fondo, imagen, texto y botón cta',
    linkTo: 'hero-basico',
  },
  // {
  //   id: 2,
  //   title: 'Texto en 3D',
