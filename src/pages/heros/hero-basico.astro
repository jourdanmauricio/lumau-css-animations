---
import Layout from '../../layout/Layout.astro';

const html = `
    <img
      src="/lumau-css-animations/images/imagen6.jpg"
      alt="Imagen aleatoria 1"
    />
`;
const styles = `
  img {
    padding: 40px 0;
    margin: 0 auto;
    animation: fadeIn 3s ease;
  }
  @keyframes fadeIn {
    0% {
      opacity: 0;
      filter: blur(20px);
    }
    10% {
      opacity: 1;
      filter: brightness(2) blur(10px);
    }
  }
`;
---

