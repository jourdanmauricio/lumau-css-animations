<style>
  .hero {
    position: relative;
    width: 100%;
    height: calc(100vh - 64px);
    background:
      linear-gradient(90deg, #80cde000, #41e1d166),
      url(/lumau-css-animations/images/modern-hospital_opt.jpg) no-repeat center
        center fixed;
    background-size: cover;
    z-index: 0;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 40px;
  }
  .logo {
    color: #0f172a;
    font-size: 2rem;
    font-weight: 600;
  }
  .logo span {
    color: #075985;
  }
  ul {
    display: flex;
    gap: 2rem;
  }
  li {
    color: black;
  }
  .btn {
    background-color: #075985;
    padding: 4px 8px;
    border-radius: 4px;
    width: fit-content;
  }
  .image {
    position: absolute;
    width: 500px;
    bottom: 0;
    right: 50px;
    overflow: hidden;
    z-index: -10;
  }
  .container {
    padding-top: 10vh;
    padding-left: 20vh;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    width: 100%;
  }
  .container h2 {
    font-size: 5rem;
    color: #075985;
  }
  .container p {
    font-size: 1.5rem;
    color: #0f172a;
  }
  .btn-cta {
    padding: 8px 30px;
  }
</style>
