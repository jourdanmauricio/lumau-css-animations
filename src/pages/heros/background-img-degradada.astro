---
import Layout from '../../layout/Layout.astro';

const html = `
  <main>
    <div class="main-intro">
      <h1>Welcome to my first website</h1>
      <p>
        Nam interdum felis at felis placerat, sad varius<br />massa ultricies.
        Integer quis nisi non dolor<br />scelerisque efficitur at sed turpis.
      </p>
      <a href="#">MY WORK</a>
    </div>
    <div class="main-quotes"></div>
  </main>
`;
const styles = `
  main {
    width: 100%;
    height: calc(100vh - 64px);
    background-color: #1a253a;
    background-image: url(/lumau-css-animations/images/background.png);
    background-size: cover;
    background-repeat: no-repeat;
    padding: 60px;
    display: flex;
    flex-direction: column;
    text-align: center;
  }
  h1 {
    width: 100%;
    font-size: 2rem;
    /* line-height: 2.5rem; */
    color: #fff;
    font-family: Roboto;
    font-weight: 600;
    text-transform: uppercase;
  }
  p {
    font-size: 18px;
    line-height: 30px;
    color: #fff;
  }
  a {
    margin: 30px auto;
    font-size: 18px;
    padding: 12px;
    display: block;
    background-color: #c13584;
    padding: 10px 20 px;
    width: fit-content;
    color: #fff;
    cursor: pointer;
  }

  .main-intro {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  main .main-quotes p {
    border-left: 4px solid #c13584;
    padding-left: 20px;
    margin: 40px 0;
  }

  main .main-quotes p:nth-child(2) {
    margin-left: 100px;
  }

  @media (min-width: 769px) {
    main {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      background-image: url(/lumau-css-animations/images/woman_opt.png),
        url(/lumau-css-animations/images/background.png);
      background-size: 70vh, cover;
      background-position:
        85% bottom,
        center;
    }
    .main-intro {
      max-width: 50%;
    }
  }
`;
---

<Layout
  pageTitle="Asesoría financiera"
  description="Black Wing optimiza tus Finanzas con Profesionales. Nuestros asesores financieros están aquí para ayudarlo. Ingresa y comunícate con nuestro equipo"
>
  <section class="hero">
    <nav>
      <h1 class="logo">Laser<span>Med</span></h1>
      <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">Acerca de mi</a></li>
        <li><a href="#">Tratamientos</a></li>
        <li><a href="#">Blog</a></li>
        <li><a href="#">Contacto</a></li>
      </ul>
      <a
        href="#"
        class="btn"
        >Solicitar cita</a
      >
    </nav>
    <div class="image">
      <img
        src="/lumau-css-animations/images/hero-img.png"
        alt=""
      />
    </div>
    <div class="container">
      <h2>Lorem Ipsum</h2>
      <p>
